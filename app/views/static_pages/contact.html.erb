<h1>Contact</h1>
<p>You can find us on 5th Avenue in Olympia, right next to the performing arts center. If you'd like to chat with one of our friendly staff, give us a call at 360-555-5555.</p>

<%= flash[:notice] %>

<%= form_tag("/static_pages/thank_you") do %>
<div id="contact-form">
	<div class="row">
		<div class="col-md-12">
			<div class="form-group">
				<%= label_tag :name %>
				<%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
			</div>      
			<div class="form-group">
				<%= label_tag :email, "Email Address" %>
				<%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
			</div>
			<div class="form-group">
				<%= label_tag :message %>
				<%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
			</div>      
		</div>
	</div>
</div>
<div id="send-btn">
	<%= submit_tag "Send" %>
</div>
<% end %>