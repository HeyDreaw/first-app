<p id="notice"><%= notice %></p>
<div class="container-fluid show">
	<div class="row">
		<div class="col-md-12 col-xs-12">
			<h1>
				<strong>Name:</strong>
				<%= @product.name %>
			</h1>

			<p>
				<%= image_tag(@product.image_url, width: "330", data_zoom_image: @product.image_url, class: "img-zoom img-responsive") %>
			</p>
			<p>
				<strong>Description:</strong>
				<%= @product.description %>
			</p>

			<p>
				<strong>Colour:</strong>
				<%= @product.colour %>
			</p>

			<p>
				<strong>Price:</strong>
				<%= @product.price %>
			</p>
		</div>
	</div>
</div>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
